
@{
    ViewBag.Title = "Authenticate";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



<div class="" id="">
    <a class="hiddenanchor" id="toregister"></a>
    <a class="hiddenanchor" id="tologin"></a>
    <div id="wrapper">
        <div id="login" class="animate form">
            @if (ViewBag.Message != null)
            {   <br /> <br />
            <h3 style="text-align:center; margin-bottom:0px; padding-bottom:0px">@ViewBag.Message</h3>
            }
            else
            {
               
                <a href="@Url.Action("Index","Home")" title="Home">
                    <h3 style="font-size: 2.0em; color: white; text-shadow: 4px 4px black; font-weight:bolder; text-align:center"> TFMCooperative Society Portal  </h3>
                </a>
            }

            <section class="login_content">
                <!-- Sign-in section form -->
                @Html.Partial("~/Views/Account/_SignInPartial.cshtml")

                @*@{
                    Html.RenderAction("_SignInPartial", "Account");
                }*@

            </section>
            <!-- -->
        </div>

        <div id="register" class="animate form">
            @*<a href="@Url.Action("Index","Home")" title="Home">
                <h3 style="font-size: 2.0em; color: white; text-shadow: 4px 4px black; font-weight:bolder; text-align:center"> TFMCooperative Society Portal  </h3>
            </a>*@
            @*<section class="login_content">
                @{
                    Html.Partial("~/Views/Account/_SignUpPartial.cshtml");
                }
            </section>*@
            <!-- content -->

        </div>
    </div>
</div>










