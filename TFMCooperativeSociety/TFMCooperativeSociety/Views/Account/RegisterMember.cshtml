@model TFMCooperativeSociety.Models.RegisterMemberViewModel


@{
    ViewBag.Title = "Authenticate";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h3 style="text-align:center; margin-bottom:0px; padding-bottom:0px">@ViewBag.Message</h3>

<div class="">
    <a class="hiddenanchor" id="toregister"></a>
    <a class="hiddenanchor" id="tologin"></a>
    <div id="wrapper">
        
        <div id="login" class="animate form">
            <!--REgister section Form-->
            <h3 style="font-size: 2.0em; color: white; text-shadow: 2px 2px black; font-weight:bolder; text-align:center"> <a style="color:azure" href="@Url.Action("Index","Home")"> TFMCooperative Society Portal. </a> </h3>

            @*@Html.Partial("~/Views/Account/_SignUpPartial.cshtml")*@
            <section class="login_content">
                @using (Html.BeginForm("RegisterMember", "Account", FormMethod.Post, new { @class = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <h1>Create Account</h1>
                    <div>
                        @*<input type="text" class="form-control" placeholder="Username" required="" />*@
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "input form-control", placeholder = "First Name" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })

                    </div>
                    <div>
                        @*<input type="email" class="form-control" placeholder="Email" required="" />*@

                        @Html.TextBoxFor(model => model.MiddleName, new { @class = "input form-control", placeholder = "Middle Name" })
                        @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        @*<input type="password" class="form-control" placeholder="Password" required="" />*@

                        @Html.TextBoxFor(model => model.LastName, new { @class = " input form-control", placeholder = "Last Name" })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                    </div>
                    <div>
                        @Html.TextBoxFor(model => model.Email, new { @class = " input form-control", placeholder = "Email", type = "Email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                        @*<a class="btn btn-default submit" href="index.html">Submit</a>*@
                    </div>
                    <div>
                        @*<input type="password" class="form-control" placeholder="Password" required="" />*@

                        @Html.TextBoxFor(model => model.Password, new { @class = "input form-control", placeholder = "Password", type = "Password" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                    </div>
                    <div>
                        @*<input type="password" class="form-control" placeholder="Password" required="" />*@

                        @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "input form-control", placeholder = "Confirm Password", type = "Password" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

                    </div>
                    <div>
                        <input type="submit" name="Register" value="Register" class="btn btn-default submit" style="color:darkgreen; font-weight:bold" />
                    </div>
                    <div class="clearfix"></div>
                    <div class="separator">
                        <p class="change_link">
                            Already a member ?
                            <a href="@Url.Action("Login","Account")" class="to_register" style="color:white; font-weight:bold"> Log in </a>
                        </p>

                        <div>
                            <h1><i class="fa fa-paw" style="font-size: 26px;"></i> TFMC</h1>
                            <span> Tech Farmers Mulltipurpose Cooperative Society @DateTime.Now.Year  All rights Reserved</span>
                        </div>
                    </div>
                    @*</form>*@
                }
                <!-- form -->
            </section>
            <!-- content -->
        </div>
    </div>
</div>