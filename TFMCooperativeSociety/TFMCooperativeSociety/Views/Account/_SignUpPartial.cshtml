@model TFMCooperativeSociety.Models.RegisterMemberViewModel

<div id="registerPartial">
    <form action="@Url.Action("RegisterMember","Account",new { ReturnUrl = ViewBag.ReturnUrl })" method="post">

        @*@using (Ajax.BeginForm("RegisterMember", "Account", new AjaxOptions() { UpdateTargetId="registerPartial"}, new { @class = "form" }))
            {*@
        @Html.AntiForgeryToken()

        <h1>Create Account</h1>
        <div>
         
            @Html.TextBoxFor(m => m.FirstName, new { @class = "input form-control", placeholder = "First Name" })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })

        </div>
        <div>

            @Html.TextBoxFor(model => model.MiddleName, new { @class = "input form-control", placeholder = "Middle Name" })
            @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
        </div>
        <div>

            @Html.TextBoxFor(model => model.LastName, new { @class = " input form-control", placeholder = "Last Name" })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

        </div>
        <div>
            @Html.TextBoxFor(model => model.Email, new { @class = " input form-control", placeholder = "Email", type = "Email" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            @*<a class="btn btn-default submit" href="index.html">Submit</a>*@
        </div>
        <div>
            @*<input type="password" class="form-control" placeholder="Password" required="" />*@

            @Html.TextBoxFor(model => model.Password, new { @class = "input form-control", placeholder = "Password", type = "Password" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        </div>
        <div>
            @*<input type="password" class="form-control" placeholder="Password" required="" />*@

            @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "input form-control", placeholder = "Confirm Password", type = "Password" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

        </div>
        <div>
            <input type="submit" name="Register" value="Register" class="btn btn-default submit" style="color:darkgreen; font-weight:bold" />
        </div>
        <div class="clearfix"></div>
        <div class="separator">
            <p class="change_link">
                Already a member ?
                <a href="@Url.Action("Login","Account")" class="to_register" style="color:white; font-weight:bold"> Log in </a>
            </p>

            <div>
                <h1><i class="fa fa-paw" style="font-size: 26px;"></i> TFMC</h1>
                <span> Tech Farmers Mulltipurpose Cooperative Society @DateTime.Now.Year  All rights Reserved</span>
            </div>
        </div>
        </form>

        <!-- form -->
</div>

@Scripts.Render("~/bundles/jquery")
